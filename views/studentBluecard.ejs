<html>
    <head>
        <title>Student Info</title>
        <link rel="stylesheet" href="bootstrap.css"/>
        <link rel="stylesheet" type="text/css"href="semantic.css"/>
        <link rel="stylesheet" href="bootstrap.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <style>
            body {
                font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
                font-size: 14px;
                line-height: 1.42857143;
                color: #333;
                background-color: #fff;
            }
            h1{
                font-size: 36px;
                font-family: inherit;
                font-weight: 500;
                line-height: 1.8;
                color: inherit;
                margin-top:5px;
            }
            .list-group {
                    padding-left: 0;
                    margin-bottom: 20px;
            }
            .list-group-item:first-child {
                    border-top-left-radius: 4px;
                    border-top-right-radius: 4px;
                }
            .list-group-item {
                    position: relative;
                    display: block;
                    padding: 10px 15px;
                    margin-bottom: -1px;
                    background-color: #800e10;
                    border-bottom: 1px solid #ECCF9E;
                    color: #ECCF9E;
                }
            .container {
                padding-right: 15px;
                padding-left: 15px;
                margin-right: auto;
                margin-left: auto;
            }
            .col-md-4{
                    position: relative;
                    min-height: 1px;
                    padding-right: 15px;
                    padding-left: 15px;
                }

        </style>
    </head>
    <body  style="background: url(de1.jpg); background-size: cover;">
        <center><h1 style="background-color:#800e10;color:#ECCF9E;">Student BlueCard</h1></center>
          <% console.log(item); item.map((item)=>{  %>
            <div class="container col-md-4" style="width:25%;">
                <h2 style="margin:10 auto;color:#800e10;">Sem - <%= item.semester %> marks</h1>
                <ul class="list-group">
                    <li class="list-group-item">Register Number : <%= item.reg_no %></li>
                    <li class="list-group-item">Semester : <%= item.semester %></li>
                    <li class="list-group-item">Internal : <%= item.internal %></li>
                    <li class="list-group-item">Department : <%= item.dept %></li>
                    <li class="list-group-item"><%= item.sub1_name %> : <%= item.sub1 %></li>
                    <li class="list-group-item"><%= item.sub2_name %> : <%= item.sub2 %></li>
                    <li class="list-group-item"><%= item.sub3_name %> : <%= item.sub3 %></li>
                    <% if(item.sub4_name && item.sub4) { %>
                      <li class="list-group-item">
                        <%= item.sub4_name %> : <%= item.sub4 %>
                      </li>
                    <% } %>
                    <% if(item.sub5_name && item.sub5) { %>
                      <li class="list-group-item"><%= item.sub5_name %> : <%= item.sub5 %></li>
                    <% } %>
                    <% if(item.sub6_name && item.sub6) { %>
                      <li class="list-group-item"><%= item.sub6_name %> : <%= item.sub6 %></li>
                    <% } %>
                </ul>
            </div>
            <% }) %>
        </div>
    </body>

</html>
