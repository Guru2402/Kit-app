<html>
    <head>
        <title>KIT Staffs</title>
        <link rel="stylesheet" type="text/css"href="bootstrap.css"/>
        <link rel="stylesheet" type="text/css"href="semantic.css"/>    
        <link rel="stylesheet" href="icon.css"/>    
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" media="all">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css" rel="stylesheet" media="all">
        <script type="text/javascript" src="semantin.min.js" ></script>
    
    </head>
    <body>
    <div class="ui container segment" style="width:35%; margin-top:2em; margin-bottom: 1.5em">
      <h1 class="ui header" style="margin : 0 auto;">Sign-Up</h1>
        <form class="ui form" action="/staffs" method="post">
          <h4 class="ui dividing header"style="padding-top: 5;">Personal Information</h4>
          <div class="two fields">
            <div class="field">
              <label>Full Name</label>
                <div class="field">
                  <input type="text" name="schoolName" placeholder="Full Name">
                </div>
            </div>
            <div class="field">
             <label>Register Number</label>
             <input type="number" name="regNo" placeholder="Enter the Reg. No." >
            </div>
          </div>
          <div class="two fields">
            <div class="field">
              <label>Department</label>
              <select class="ui search dropdown" name="position">
                <option value="">Enter ur dept.</option>
                <option value="AL">ECE</option>
                <option value="AL">EEE</option>
                <option value="AK">MECH</option>
                <option value="AZ">CSE</option>
                <option value="AR">AERO</option>
                <option value="CA">Agricultural Engg.</option>
                <option value="CO">Bio Medical Engg.</option>
                <option value="CT">Bio-Tech</option>
                <option value="DE">MBA</option>
                <option value="DC">MCA</option>
                <option value="FL">S & H</option>
                <option value="GA"></option>
                <option value="HI">Hawaii</option>
              </select>
            </div>
            <div class="field">
              <label>E-mail</label>
              <input type="text" name="Email" placeholder="Email"></div>
          </div>
          <div class="field">
            <label>Address</label>
            <textarea name="address"></textarea>
          </div>
         <div class="field">
            <label>Upload your resume</label>
            <input type="file" name="resume" data-imagevalidate="yes" data-file-accept="pdf, doc, docx, xls, csv, txt, rtf, html, zip, mp3, wma, mpg, flv, avi, jpg, jpeg, png, gif" data-file-maxsize="10240" data-file-minsize="0" data-file-limit="0" data-component="fileupload" />
          </div>
          <h4 class="ui dividing header">Account Info</h4>
          <div class="two fields">
            <div class="required field">
              <label>Username</label>
              <div class="ui icon input">
                <input type="text" placeholder="Username" name="userName">
                <i class="user icon"></i>
              </div>
            </div>
            <div class="required field">
              <label>Password</label>
              <div class="ui icon input">
                <input type="password" name="pwd">
                <i class="lock icon"></i>
              </div>
            </div>
          </div>
        <div class="ui hidden divider"></div>        
          <div class="ui error message">
            <div class="header">We noticed some issues</div>
          </div>
          <div><input type="submit"  class="ui submit button"></div>
             <div class="ui success message">
                <div class="header">Completed</div>
                <p>You're all signed up </p>
            </div>                
        </form>
        </div>
    </body>
</html>