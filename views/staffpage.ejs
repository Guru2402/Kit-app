    </head>
    <body class="img-responsive" style="background: url(../de1.jpg); background-size: cover;">
<!--============================================================================================================-->
                                        <!--  NavBar  -->
<!--============================================================================================================-->
       <nav class="navbar navbar-inverse navbar-fixed-top">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="#">KIT staffs</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
              <ul class="nav navbar-nav navbar-right">
                <li><a href="/staffs/markentry">Mark Entry</a></li>
                <li><a href="#">Upload Books</a></li>
                <li><a href="http://nptel.ac.in/">Nptel</a></li>
                <li><a href="/logout">Logout</a></li>
                <form class="navbar-form navbar-right" action="/staffs/searchStudent" method="post">
                    <div class="form-group">
                      <input type="number" class="form-control" placeholder="Type the Reg.No of student" name="search">
                    </div>
                    <button type="submit" class="btn btn-primary">Search</button>
                  </form>
              </ul>
            </div>
          </div>
        </nav>
<!--==============================================================================================================-->
                                         <!--  Content  -->
<!--===============================================================================================================-->
         <%  var error ;if (error) { %>
           <div class="alert alert-danger" style="text-align:center;"><%= error %></div>
         <% } %>
          <div class="container-fluid">
              <div class="row">
                <div class="col-sm-3 col-md-2 col-lg-2 sidebar">
                  <ul class="nav nav-sidebar">
                    <li class="active"><a href="#">profile <span class="sr-only">(current)</span></a></li>
                    <li><a href="#">Attendance</a></li>
                    <li><a href="/staffs/markentry">Mark Entry</a></li>
                    <li><a href="http://www.rejinpaul.com/2014/01/regulation-2013-syllabus-anna-university-syllabus-2013-regulation.html">Books</a></li>
                    <li><a href="http://www.rejinpaul.com/2016/10/anna-university-rejinpaul-ug-pg-course-materials-notifications-updates.html">Question Banks</a></li>
                    <li><a href="#">Update Exam Schedule</a></li>
                    <li><a href="/logout">Logout</a></li>
                  </ul>
                </div>
                <center>
                  <div class="ui container segment" style="width:35%; margin-top:2em;  margin-left:2em; margin-bottom: 1.5em">
                    <h1 class="page-header" style="color:#ECCF9E">Profile</h1>
                        <div class=" placeholder">
                          <img src="../uploads/<%= item.pic %>" width="200" height="200" class="img-responsive" alt="Generic placeholder thumbnail">
                            <h2 style="color:#ECCF9E;  text-align:center"><%= item.name %></h4>
                            <h4 style="color:#ECCF9E;  text-align:center">Id No: <%= item.username %></h4>
                            <h4 style="color:#ECCF9E;  text-align:center">DOB: <%=  item.dob.toISOString().slice(0, 10);%></h4>
                            <h4 style="color:#ECCF9E;  text-align:center">Mobile: <%= item.phone %></h4>
                            <h4 style="color:#ECCF9E;  text-align:center">Blood Group: <%= item.bloodGroup %></h4>
                            <h4 style="color:#ECCF9E;  text-align:center">Community: <%= item.community %></h4>
                            <h4 style="color:#ECCF9E;  text-align:center">Dept: <%= item.dept %></h4>
                            <h4 style="color:#ECCF9E;  text-align:center">Email: <%= item.email %></h4>
                            <h4 style="color:#ECCF9E;  text-align:center">Aadhar id: <%= item.aadharNumber %></h4>
                      </div>
                  </div>
                </center>
              </div>
         </div>

</body>
